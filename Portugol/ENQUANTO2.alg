INICIO
    VARIAVEL INTEIRO FAT, CONTADOR, RESULTADO 
   
    ESCREVER "DIGITE A FATORIAL DESEJADO : "
    LER FAT
    CONTADOR <- FAT
    RESULTADO <- FAT
    ENQUANTO CONTADOR > 1 FAZ
     CONTADOR <- CONTADOR - 1
        RESULTADO <- RESULTADO * CONTADOR
        FIMENQUANTO
        ESCREVER "FATORIAL DE ", FAT,"!  = ",RESULTADO, "\n"
        FIM