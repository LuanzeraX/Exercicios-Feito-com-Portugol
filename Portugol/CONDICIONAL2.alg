INICIO
    VARIAVEL INTEIRO NUMERO 
    VARIAVEL INTEIRO RESTO
    
    ESCREVER "DIGITE UM NUMERO "
    LER NUMERO
    
    RESTO <- NUMERO%2
    
    SE RESTO = 0 ENTÃO 
    ESCREVER " NÚMERO ",NUMERO," É PAR "
    SENÃO 
    ESCREVER " NÚMERO ",NUMERO," NÃO É PAR "
    FIMSE 
    FIM
   